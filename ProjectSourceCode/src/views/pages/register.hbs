<style>
    body, html {
    font-family: Arial;
}
main {
    display: flex;
    flex-direction: column;
    align-items: center;
}
form > div {
    width: 50%;
    margin-bottom: 5px;
}
form input {
    width: 150%;
    padding: 8px;
    margin-top: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
}
form button {
    width: 30%;
    padding: 8px;
    background-color: #007bff;
    /* background-color: green; */
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin-top: 5px;
}
