{{> message}}
<div class="container" id="form">
    <h1>Welcome to SafeBets</h1>
    <div class="bets-picker" id="form">
        <form action="/home/odds" type='submit' method="POST">
            <h2 for="sportsbook">Pick A Sportsbook</h2>
            <div>
                <select class="form-select" aria-label="Default select example" id="sportsbook" name="sportsbook">
                    <option selected disabled value={{selection.sportsbook}}>{{#if selection.sportsbook}}{{selection.sportsbook}}{{else}}Sportsbook{{/if}}</option>
                    {{#each sportsbook}}
                        <option value={{#if selection.sportsbook}}{{selection.sportsbook}}{{else}}{{sportsbook_name}}{{/if}}>{{sportsbook_name}}</option>
                    {{/each}}
                </select>
            </div>
            <h2 for="deal">Pick A Deal</h2>
            <div>
                <select class="form-select" aria-label="Default select example" id="deal" name="deal">
                    <option selected disabled value={{selection.deal}}>{{#if selection.deal}}{{selection.deal}}{{else}}Deal{{/if}}</option>
                    {{#each deal}}
                        <option value={{#if selection.deal}}{{selection.deal}}{{else}}{{deal_type}}{{/if}}>{{deal_type}}</option>
                    {{/each}}
                </select>
            </div>
            <h2 for="sport">Pick A Sport</h2>
            <div>
                <select class="form-select" aria-label="Default select example" id="sport" name="sport">
                    <option selected disabled value={{selection.sport}}>{{#if selection.sport}}{{selection.sport}}{{else}}Sport{{/if}}</option>
                    {{#each sport}}
                        <option value={{#if selection.sport}}{{selection.sport_key}}{{else}}{{sport_key}}{{/if}}>{{sport_name}} {{sport_league}}</option>
                    {{/each}}
                </select>
            </div>
            <div>
                <button type="submit" id="submit-button">Get Bets</button>
            </div>
        </form>
    </div>

    <div class="eligible-bets">
        <h2>Current Eligible Bets</h2>
        <table class="table">
            {{#each event}}
                <tr>
                    <th></th>
                    <th>{{home_team}}</th>
                    <th>{{away_team}}</th>
                </tr>
                {{#each bookmakers}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{markets.[0].outcomes.[0].price}}</td>
                    <td>{{markets.[0].outcomes.[1].price}}</td>
                    <td>
                        <form action="/bets/add" type="submit" method="post">
                            <input type="hidden" class="form-control" id="event_id" name="event_id" value={{../id}}>
                            <input type="hidden" class="form-control" id="sportsbook" name="sportsbook" value={{key}}>
                            <button id="submit-button" type="submit" class="btn btn-secondary">SELECT</button>
                        </form>      
                    </td>
                </tr>
                {{/each}}
            {{/each}}
        </table>
    </div>
</div>
